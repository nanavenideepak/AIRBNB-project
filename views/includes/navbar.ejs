<style>
  .search-btn {
    background-color: #fe424d;
    color: #fff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .search-btn:hover {
    background-color: #fe424d;
    color: #fff;
  }

  .search-btn i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-inp {
    border-radius: 25px;
    padding: 0.5rem 3rem 0.5rem 3rem;
    font-size: 1rem;
  }

  .user-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, #fe424d 0%, #ff7e5f 100%);
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 1rem;
    cursor: pointer;
    border: 2px solid #fff;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.15);
    transition: transform 0.2s ease;
  }

  .user-avatar:hover {
    transform: scale(1.05);
  }

  .user-dropdown .dropdown-menu {
    min-width: 200px;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    border: none;
    padding: 0.5rem 0;
  }

  .user-dropdown .dropdown-item {
    padding: 0.6rem 1rem;
  }

  .user-dropdown .dropdown-item:hover {
    background-color: #f7f7f7;
  }

  .user-dropdown .dropdown-header {
    font-weight: 600;
    color: #222;
    padding: 0.6rem 1rem;
  }
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-regular fa-compass"></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">

        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search" method="GET" action="/listings">
          <input class="form-control me-2 search-inp" type="search" name="q" placeholder="Search destinations" />
          <button class="btn search-btn" type="submit"><i class="fa-solid fa-magnifying-glass"></i>Search</button>
        </form>
        <button id="themeToggle" class="theme-toggle ms-2" title="Toggle dark mode">
          <i class="fa-solid fa-moon"></i>
        </button>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser) { %>
          <a class="nav-link" href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
          <% } %>
            <% if(currUser) { %>
              <div class="dropdown user-dropdown">
                <div class="user-avatar" data-bs-toggle="dropdown" aria-expanded="false">
                  <%= currUser.username.charAt(0).toUpperCase() %>
                </div>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li><span class="dropdown-header">
                      <%= currUser.username %>
                    </span></li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><a class="dropdown-item" href="/listings/new"><i class="fa-solid fa-plus me-2"></i>Host a
                      listing</a></li>
                  <li><a class="dropdown-item" href="/listings"><i class="fa-solid fa-house me-2"></i>Browse
                      listings</a></li>
                  <li>
                    <hr class="dropdown-divider">
                  </li>
                  <li><a class="dropdown-item text-danger" href="/logout"><i
                        class="fa-solid fa-right-from-bracket me-2"></i>Log out</a></li>
                </ul>
              </div>
              <% } %>
      </div>
    </div>
  </div>
</nav>